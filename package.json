{
  "name": "office-survivor",
  "version": "1.0.0",
  "description": "Office Survivor - Roguelite bullet heaven game",
  "private": true,
  "workspaces": [
    "server",
    "common",
    "client"
  ],
  "scripts": {
    "dev": "bun run dev:server",
    "dev:server": "cd server && bun run dev",
    "dev:client": "cd client && bun run dev",
    "dev:all": "bun run --bun dev:server & bun run dev:client",
    "build": "bun run build:server && bun run build:client",
    "build:server": "cd server && bun run build",
    "build:client": "cd client && bun run build",
    "start": "cd server && bun run start"
  },
  "keywords": ["game", "phaser", "roguelite", "typescript"],
  "author": "",
  "license": "MIT"
}
