{
  "name": "office-survivor-server",
  "version": "1.0.0",
  "description": "Office Survivor game server - leaderboard and future multiplayer",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "start": "bun dist/index.js",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio"
  },
  "keywords": ["game", "leaderboard", "rest-api"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@office-survivor/common": "workspace:*",
    "@prisma/client": "^5.9.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "prisma": "^5.9.1",
    "typescript": "^5.3.3"
  }
}
